<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="28dp"
    android:paddingRight="28dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:focusableInTouchMode="true">

    <ProgressBar android:id="@+id/AddRoomDialog_ProgressBar_Progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <LinearLayout android:id="@+id/AddRoomDialog_LinearLayout_AddRoomForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add a Room"
            android:layout_gravity="center"
            android:id="@+id/AddRoomDialog_TextView_Title"
            android:textSize="22dp"
            android:fontFamily="serif-monospace"
            android:textColor="@color/passwordVisible" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/AddRoomDialog_TextInputLayout_RoomNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText android:id="@+id/AddRoomDialog_EditText_RoomName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_marginTop="8dp"
                android:hint="Room Name"
                android:textSize="15dp"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

</RelativeLayout>