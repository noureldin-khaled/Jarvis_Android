<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iot.guc.jarvis.SettingsActivity"
    android:id="@+id/main_layout">

    <ImageView android:id="@+id/profile_pic"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/default_pic"/>

    <TextView android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/profile_pic"
        android:text="Nour ElDin Khaled"
        android:textColor="#000"
        android:textSize="22dp"/>

    <TextView android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/profile_pic"
        android:layout_below="@id/username"
        android:text="Admin"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="22dp"/>

    <ImageView android:id="@+id/type_logo"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_below="@id/username"
        android:layout_toRightOf="@id/type"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/admin"/>

    <Button android:id="@+id/change_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/type"
        android:text="Change Password"
        android:layout_toRightOf="@id/profile_pic"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="18dp"
        android:onClick="changePasswordClicked"/>

    <LinearLayout android:id="@+id/make_admin_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/change_password"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:focusableInTouchMode="true">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2">

                <EditText
                    android:id="@+id/username_to_be_made_admin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="19dp"
                    android:hint="Username" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Make Admin"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="7dp"
                android:layout_weight="4"
                android:onClick="makeAdminClicked"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*Be careful of whom you make an admin."
            android:layout_marginTop="5dp"/>
    </LinearLayout>
</RelativeLayout>
