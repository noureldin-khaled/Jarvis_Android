<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/PersonListItem_ImageView_Type"
        android:layout_width="45sp"
        android:layout_height="45sp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        app:srcCompat="@drawable/admin"/>

    <TextView
        android:id="@+id/PersonListItem_TextView_Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="20sp"
        android:layout_toRightOf="@id/PersonListItem_ImageView_Type"
        android:layout_marginTop="18sp"
        android:layout_marginLeft="15sp"
        android:textColor="@color/Black" />

    <ImageButton
        android:id="@+id/PersonListItem_ImageButton_ActionButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5sp"
        android:layout_marginRight="15sp"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:src="@drawable/ic_remove_admin"/>
</RelativeLayout>